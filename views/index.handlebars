<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">

      <h4 class="mb-2">尋找餐廳：</h4>

      <div class="d-flex justify-content-between">
        <form action="/search" method="GET">
          <div class="input-group mr-2">
            <input type="text" name="keywords" value="{{ keywords }}" class="form-control" placeholder="輸入餐廳、分類"
              aria-label="Restaurant Name..." aria-describedby="search-button">
            <div class="input-group-append">
              <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
            </div>
          </div>
        </form>
        
        <form action="/sort" method="GET">
          <div class="input-group">
            <select class="form-control" id="sort" name="sort">
              <option value="1">A -> Z</option>
              <option value="2">Z -> A</option>
              <option value="3">類別</option>
              <option value="3">地區</option>
            </select>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">

        {{#each restaurants}}
        <a href="/restaurants/{{this._id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>

              <div class="card-body d-flex justify-content-end align-items-center flex-wrap">

                <a href="/restaurants/{{ this._id }}/edit" class="btn btn-link text-muted btn-sm">Edit</a>
                <a href="/restaurants/{{this._id}}" class="btn btn-link text-muted btn-sm">Detail</a>
                <form action="/restaurants/{{ this._id }}?_method=DELETE" method="POST">
                  <button class="btn btn-danger btn-sm">Delete</button>
                </form>
              </div>

            </div>
          </div>
        </a>
        {{/each}}


      </div>
    </div>
  </div>
</div>